<Window x:Class="WPF.Views.AdminMainMenuView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="/WPF;component/Images/ICON.png"
        Title="Admin Main Menu" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Administration Menu" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" Height="39" Margin="0,30,0,0"/>
        <StackPanel Margin="150,150,150,94">
            <Button Content="Открыть Список Трифов" Command="{Binding OpenTariffsCommand}" Margin="10" Width="150" Height="35"/>
            <Button Content="Открыть Список Пользователей" Command="{Binding OpenUsersCommand}" Margin="10" Width="150" Height="35"/>
            <Button Content="Выход" Command="{Binding LogoutCommand}" Margin="10" Width="100" Height="35"/>
        </StackPanel>
    </Grid>
</Window>